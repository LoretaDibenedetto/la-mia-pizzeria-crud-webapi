@model Pizza



<div class="container text-white mt-5">
<hr class="border border-danger border-2 opacity-50">
    <div class="row">
        <div class="col-12">
            <div class="d-flex  ">
                <h1 class="mt-3 mb-3">Dettagli della Pizza</h1>
            </div>
            <div class="mb-4">
                <img class="rounded-4" src="@Model.Image" width="280" alt="Immagine @Model.Name">
            </div>
            <h3>
                Nome pizza:
            </h3>
                
              <p>  @Model.Name</p>
            <h3>
                Descrizione:
            </h3>

            <p>  @Model.Description</p>

            <p>
                <strong>Categoria:</strong>
                @if (Model.Category != null)
                {
                    @Model.Category.Title
                }
                else
                {
                    <span>Nessuna categoria associata</span>
                }
            </p>
        </div>
    </div>
    <hr class="border border-danger border-2 opacity-50">
</div>