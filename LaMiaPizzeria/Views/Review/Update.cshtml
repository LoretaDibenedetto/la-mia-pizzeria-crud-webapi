@model Review


<div class="container-fluid ">
    <div class="row">
    <div class="col-sm-10 col-md-6 col-lg-4 m-auto">
    <h2 class="text-white mb-3 text-center">hai cambiato idea?</h2>
    <form asp-controller="Review" asp-action="Update" asp-route-id="@Model.Id" method="post" class="p-3">
        @Html.AntiForgeryToken()

        <div class="bord rounded-2 p-3  text-white">
            <div class="mb-3">
                <label asp-for="Id" class="form-label">Id recensione</label>
                <input asp-for="Id" type="text" class="form-control bg-transparent" readonly>
            </div>
            <div class="border-bottom pb-3 mb-2">
                <label asp-for="Name" class="form-label">Nome</label>
                <input asp-for="Name" type="text" class="form-control bg-transparent" required>
            </div>
            <div class=" p-3  text-white">
                <div class="border-bottom pb-3 mb-2">
                    <label asp-for="Description" class="form-label">Descrizione</label>
                    <textarea asp-for="Description" rows="10" class="form-control bg-transparent"></textarea>

                </div>

            </div>

        </div>

        <button type="submit" class="btn btn-outline-light mb-5 mt-2">Aggiorna</button>

        </form>
        </div>
    </div>
</div>